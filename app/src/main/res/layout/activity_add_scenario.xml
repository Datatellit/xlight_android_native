<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top_layout" />

    <LinearLayout
        android:id="@+id/mainLightsLL"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_top_edit"
        android:background="@color/colorAccent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/greenbg" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@+id/mainLightsLL"
        android:background="@color/textDarkGrey"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="20dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="ADD SCENARIO"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/nameLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-light"
            android:gravity="left|start"
            android:text="@string/scene_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textColorPrimary" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/bar_color"
            android:hint="@string/zidingyi"
            android:singleLine="true"
            android:textAlignment="textEnd" />

    </RelativeLayout>

    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_power"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/dividerColor"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_power"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameLL"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:fontFamily="sans-serif-light"
            android:gravity="left|start"
            android:text="Power"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textColorPrimary" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textAlignment="textEnd" />

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        style="@style/LineStyle"
        android:layout_below="@+id/rl_power" />


    <LinearLayout
        android:id="@+id/brightnessLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/cctLabel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-light"
            android:gravity="left|start"
            android:text="@string/color_temp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/cctLabelColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:fontFamily="sans-serif-light"
            android:gravity="left|start"
            android:text="@string/cold_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/white_seek"
                android:scaleType="matrix" />

            <SeekBar
                android:id="@+id/colorTemperatureSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/bg"
                android:layout_alignParentRight="true"
                android:paddingTop="8dp"
                android:progressDrawable="@drawable/seekbar_thumb_color"
                android:thumb="@drawable/thumb" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/line2"
        style="@style/LineStyle"
        android:layout_below="@+id/brightnessLL" />


    <RelativeLayout
        android:id="@+id/llColorTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line2"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_brg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-light"
            android:gravity="left|start"
            android:text="@string/brightness"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textColorPrimary" />

        <com.jaygoo.widget.RangeSeekBar
            android:id="@+id/brightnessSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_brg"
            app:cellMode="number"
            app:lineColorEdge="@color/colorSeekBarDefault"
            app:lineColorSelected="@color/bar_color"
            app:markTextArray="@array/markArray"
            app:seekBarMode="single"
            app:seekBarResId="@drawable/seekbar_thumb" />

        <SeekBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tv_brg"
            android:backgroundTint="@color/blue"
            android:max="100"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:progress="80"
            android:progressDrawable="@drawable/video_seekbar"
            android:secondaryProgress="0"
            android:thumb="@drawable/thumb"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/line3"
        style="@style/LineStyle"
        android:layout_below="@+id/llColorTemperature" />


    <LinearLayout
        android:id="@+id/colorLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:fontFamily="sans-serif-light"
            android:gravity="left|start"
            android:text="@string/color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textColorPrimary" />

        <RelativeLayout
            android:id="@+id/colorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/colorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:layout_toLeftOf="@+id/arraw"
                android:text="@string/select"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/arraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/arraw" />

            <RelativeLayout
                android:id="@+id/dotLayout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/colorTextView" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/line4"
        style="@style/LineStyle"
        android:layout_below="@+id/colorLL" />

    <LinearLayout
        android:id="@+id/filterLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line4"
        android:orientation="horizontal"
        android:paddingBottom="22dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="22dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="left|start"
            android:text="Filter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textColorPrimary" />

        <Spinner
            android:id="@+id/filterSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:paddingRight="20dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/backImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:scaleX=".8"
        android:scaleY=".8"
        android:src="@drawable/go_back"
        android:visibility="gone" />

    <Button
        android:id="@+id/addDeviceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:scaleX=".8"
        android:scaleY=".8"
        android:src="@drawable/go_back"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:visibility="gone">

        <Button
            android:id="@+id/addButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="ADD"
            android:textColor="@color/textDarkGrey" />

    </LinearLayout>

</RelativeLayout>